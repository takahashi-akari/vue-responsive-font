{
  "name": "vue-responsive-font",
  "version": "0.0.6",
  "private": false,
  "description": "A Vue.js plugin to make your font size responsive",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build:lib": "vue-cli-service build --target lib --name vue-responsive-font ./src/main.ts",
    "build:type": "tsc --emitDeclarationOnly --declaration -P tsconfig.types.json"
  },
  "main": "dist/vue-responsive-font.common.js",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "core-js": "^3.8.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "prettier": "^2.4.1",
    "typescript": "~4.5.5",
    "vue": "^3.2.13"
  },
  "keywords": [
    "vue",
    "vue3",
    "font",
    "responsive"
  ],
  "typings": "dist/types/main.d.ts",
  "license": "MIT"
}
